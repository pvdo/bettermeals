{{>headerUser}}
<div class="container my-5">
    <div class=" mx-auto card border border-success" style="width:500px;">
        <h1 class="card-header bg-success text-white text-center">Update meal package</h1>
        <form action="/editPackage" method="POST">
            <div class="modal-body">

                <!-- Meal Name -->
                <div class="md-form form-sm mb-3">
                    <label for="packageTitle">Meal Package Name</label>
                    <input type="name" id="packageTitle" name="packageTitle" value="{{data.packageTitle}}"
                        class="form-control form-control-sm">
                </div>

                <!-- Price -->
                <div class="md-form form-sm mb-3">
                    <label for="price">Price</label>
                    <input id="price" name="price" value="{{data.price}}" class="form-control form-control-sm validate">
                </div>



                <!-- Category -->
                <div class="md-form form-sm mb-3">
                    <label for="category">Category</label>
                    <input id="category" name="category" value="{{data.category}}"
                        class="form-control form-control-sm validate">
                </div>

                <!-- Number of meal -->
                <div class="md-form form-sm mb-3">
                    <label for="numberOfMeals">Number of meals per package</label>
                    <input type="number" id="numberOfMeals" name="numberOfMeals" value="{{data.numberOfMeals}}"
                        class="form-control form-control-sm">
                </div>
                <!-- Description -->
                <div class="md-form form-sm mb-3">
                    <label for="description">Description</label>
                    <textarea id="synopsis" name="synopsis" class="form-control" row="3">{{data.synopsis}}</textarea>
                </div>

                <!-- Is top -->
                <div class="form-check mb-3">
                    {{#if data.top}}
                    <input class="form-check-input" type="checkbox" name="top" id="top" checked>
                    {{else}}
                    <input class="form-check-input" type="checkbox" name="top" id="top">
                    {{/if}}
                    <label class="form-check-label" for="top">
                        This is a top meal!
                    </label>
                </div>

                <div class="text-center form-sm mt-2">
                    <button type="submit" class="btn btn-success">Update Package</button>
                </div>
                <div class="text-center form-sm my-2">
                    <button type="submit" class="btn btn-danger" formaction="/deletePackage">Delete Package</button>
                </div>
            </div>
        </form>
    </div>
</div>